# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/trusty64"

  # TWO WAY PARALLEL OPTION

  config.vm.define :release do |release|
    config.vm.provision :shell, path: "setup.sh", args: ["release", ":all"], keep_color: true
  end

  config.vm.define :nightly do |nightly|
    config.vm.provision :shell, path: "setup.sh", args: ["nightly",":all"], keep_color: true
  end


  # FOUR WAY PARALLEL OPTION

  config.vm.define :releaseAL do |releaseAL|
    config.vm.provision :shell, path: "setup.sh", args: ["release", "releaseAL"], keep_color: true
  end
  config.vm.define :releaseMZ do |releaseMZ|
    config.vm.provision :shell, path: "setup.sh", args: ["release", "releaseMZ"], keep_color: true
  end

  config.vm.define :nightlyAL do |nightlyAL|
    config.vm.provision :shell, path: "setup.sh", args: ["nightly","nightlyAL"], keep_color: true
  end
  config.vm.define :nightlyMZ do |nightlyMZ|
    config.vm.provision :shell, path: "setup.sh", args: ["nightly","nightlyMZ"], keep_color: true
  end

end
